<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_listview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/android_listview_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/android_listview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@+id/android_listview_image"
        android:text="产品名"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/android_listview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_toLeftOf="@+id/checkbox_item"
        android:text="价格"
        android:textSize="12sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkbox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:clickable="false"/>
</RelativeLayout>